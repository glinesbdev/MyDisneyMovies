<UserControl x:Class="MyDisneyMovies.UI.Views.PopularMoviesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyDisneyMovies.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="WhiteSmoke">
    <Grid>
        <DataGrid x:Name="PopularMovieGrid" ItemsSource="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:PopularMoviesView}}, Path=DataContext.Movies}"></DataGrid>
    </Grid>
</UserControl>
