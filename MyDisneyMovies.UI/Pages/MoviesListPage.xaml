<local:BasePage x:TypeArguments="entity:MovieListEntity" 
                x:Class="MyDisneyMovies.UI.Pages.MoviesListPage"
                x:Name="MovieListPage"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:local="clr-namespace:MyDisneyMovies.UI.Pages"
                xmlns:c="clr-namespace:MyDisneyMovies.UI.Controls"
                xmlns:entity="clr-namespace:MyDisneyMovies.Core.Entities;assembly=MyDisneyMovies.Core"
                mc:Ignorable="d"
                d:DesignHeight="450" 
                d:DesignWidth="800"
                Title="Movie List">
    
    <Grid>        
        <Grid.ColumnDefinitions>
            <!-- Movie List -->
            <ColumnDefinition Width="2*" />
            <!-- Movie Details -->
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Movie List -->
        <c:MovieListControl />

        <!-- Movie Details -->
        <c:MovieDetailControl Grid.Column="1" />
    </Grid>
</local:BasePage>
